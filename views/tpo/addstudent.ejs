<%- include ('../partials/header.html'); -%>
<title>Add Students</title>
<link rel="stylesheet" href="../../css/tpo.css">

<style>
    /* Fix navbar not clickable */
.navbar {
    position: relative;
    z-index: 9999 !important;
}

.dropdown-menu {
    z-index: 10000 !important;
}

/* Make the page content stay BELOW the navbar */
.container,
.row,
.col-md-6,
.form-card {
    position: relative;
    z-index: 1;
}

    body {
        background: #f5f7fa !important;
    }

    .page-header {
        padding: 15px 0;
        border-radius: 8px;
        background: #ffffff !important;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        margin-top: 20px;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 600;
        color: #222;
    }

    /* Improve the small form card */
    .form-card {
        background: #ffffff !important;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    }

    /* Clean label */
    label {
        font-weight: 500;
        margin-bottom: 6px;
        color: #444;
    }

    /* File input styling remains bootstrap-based */
    input[type="file"] {
        padding: 10px;
    }

    /* Clean button */
    .btn-outline-info {
        font-weight: 500;
        padding: 10px 25px;
        border-radius: 6px;
    }
</style>

</head>
<body>

    <%- include ('partials/navbar.html'); -%>

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="page-header text-center">
                    <h1>Add Students</h1>
                </div>

            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-md-6 form-card">

                <form class="form-horizontal" role="form" method="post" action="/tpo/addstudent" enctype="multipart/form-data">
                    
                    <div class="form-group">
                        <label class="control-label">Add Excel File Here</label>
                        <input class="form-control" type="file" name="uploadfile" accept=".xls, .xlsx" required/>
                    </div>
                    
                    <!-- Dynamic Status Message -->
                    <% if (locals.message) { %>
                        <div class="alert alert-<%= status %>"><%= message %></div>
                    <% } %>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-outline-info">Upload</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
