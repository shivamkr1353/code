<%- include ('../partials/header.html'); -%>
<title>Login TPO</title>
<link rel="stylesheet" href="../../css/tpo.css">
</head>
<body class="auth-page">

  <div class="auth-card">
    <h1 class="auth-title">TPO Login</h1>
    <p class="auth-subtitle">Welcome back! Please log in to your account.</p>

    <form action="/tpo/login" method="POST" data-toggle="validator">
      
      <% if (locals.login_errors) { 
        login_errors.forEach(function(error_msg){ %>
       
          <div class="auth-alert alert-danger"><%= error_msg %></div>
        <% });
      } %>

      <div class="auth-form-group">
        <label for="inputEmail">Email</label>
        <input type="email" name="user_email" id="inputEmail" class="auth-input" placeholder="xyz@gmail.com" required>
        <div class="help-block with-errors"></div>
      </div>

      <!-- Password Input -->
      <div class="auth-form-group">
        <label for="inputPassword">Password</label>
        <input type="password" name="user_pass" id="inputPassword" data-error="You must enter a password." class="auth-input" placeholder="Password" required>
        <div class="help-block with-errors"></div>
      </div>

      <!-- Login Button -->
      <div class="auth-form-group">
        <button type="submit" class="auth-button">Login</button>
      </div>
      
    </form>

    <!-- Sign up Link -->
    <div class="auth-footer">
      <span> Don't have an account? </span><a href="signup">Sign Up here</a>
    </div>
  </div>
