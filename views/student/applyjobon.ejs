<%- include ('../partials/header.html'); -%>
<title>Apply Oncampus Job</title>
<link rel="stylesheet" href="../../css/student.css">
</head>

<body class="apply-job-page">
  <%- include ('partials/navbar.html'); -%>

  <div class="apply-job-container">
    <h1>Apply Oncampus Job</h1>
    <hr class="hl1"><hr class="hl1">

    <form method="post" action="" data-toggle="validator">

      <% if (errs && errs.length > 0) { %>
        <% errs.forEach(function(err) { %>
          <div class="alert alert-danger" role="alert"><%= err.message %></div>
        <% }) %>
      <% } %>

      <% if (success && success.length > 0) { %>
        <% success.forEach(function(msg) { %>
          <div class="alert alert-success" role="alert"><%= msg.message %></div>
        <% }) %>
      <% } %>

      <!-- Hidden Inputs -->
      <input type="hidden" name="cid" value="<%= res.cid %>">
      <input type="hidden" name="jid" value="<%= res.jid %>">
      <input type="hidden" name="sname" value="<%= res.sname %>">
      <input type="hidden" name="dname" value="<%= res.dname %>">

      <!-- Company Name -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Company Name</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" name="cname" value="<%= res.cname %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Location -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" name="place" value="<%= res.place %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Salary -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Salary</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" name="salary" value="<%= res.salary %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Bond Years -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Bond Years</label>
        <div class="col-sm-4">
          <input type="number" class="form-control" name="bondyears" value="<%= res.bondyears %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Service Agreement -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Service Agreement</label>
        <div class="col-sm-9">
          <textarea class="form-control" rows="3" readonly><%= res.servagree %></textarea>
        </div>
      </div>
      <hr>

      <!-- Job Type -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Job Type</label>
        <div class="col-sm-5">
          <input class="form-control" name="jobtype" value="<%= res.jobtype %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Job Description -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Job Description</label>
        <div class="col-sm-9">
          <textarea class="form-control" rows="3" readonly><%= res.jobinfo %></textarea>
        </div>
      </div>
      <hr>

      <!-- Vacancy -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Vacancy</label>
        <div class="col-sm-4">
          <input type="number" class="form-control" name="vacancy" value="<%= res.vacancy %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Criteria -->
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">(Min criteria)</label>
        <label class="col-sm-3 col-form-label">AvgCPI (>=)</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" name="minavgcp" value="<%= res.minavgcp %>" readonly>
        </div>
        <label class="col-sm-3 col-form-label">Backlogs (<=)</label>
        <div class="col-sm-2">
          <input type="number" class="form-control" name="minblog" value="<%= res.minblog %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Dates -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Last Date of Registration</label>
        <div class="col-sm-5">
          <input type="date" class="form-control" name="lastdate" value="<%= res.lastdate %>" readonly>
        </div>
      </div>
      <hr>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Date of Exam</label>
        <div class="col-sm-5">
          <input type="date" class="form-control" name="dateexam" value="<%= res.dateexam %>" readonly>
        </div>
      </div>
      <hr>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Date of Interview</label>
        <div class="col-sm-5">
          <input type="date" class="form-control" name="dateinterview" value="<%= res.dateinterview %>" readonly>
        </div>
      </div>
      <hr>

      <!-- Department -->
      <div class="form-group row">
        <label class="col-sm-3 col-form-label">Departments</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" name="department" value="<%= res.department %>" readonly>
        </div>
      </div>
      <hr><hr>

      <button type="submit" class="btn btn-outline-info" onclick="return confirm('Are you sure you want to apply for this Job?')">Apply Now</button>

    </form>
  </div>

  <%- include ('../partials/footer.html'); -%>
</body>
</html>
