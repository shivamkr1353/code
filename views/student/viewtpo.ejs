<%- include ('../partials/header.html'); -%> 
    <title>ViewTPODetails</title>

    <!-- ✅ Add rel="stylesheet" attributes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../css/student.css">
</head>
<body>
    <%- include ('partials/navbar.html'); -%>
    <br/><br/><br/><br/>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <hr class="hl1">
                <div class="page-header bg-light">
                    <h1 class="text-center">
                        Tpo Details
                    </h1>
                </div>
                <hr class="hl1"><br/>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>S.N</th>
                            <th>Tpo Name</th>
                            <th>Email</th>
                            <th>MobileNo</th>   
                            <th>City</th>
                            <th>Website</th>
                            <th>NirfRank</th>
                            <th>NACC</th>
                            <th>NCTE</th>
                            <th>AICTE</th>
                            <th>UGC</th>
                        </tr> 
                    </thead>
                    <tbody>
                        <% if (userData && userData.length > 0) { 
                            let i = 1;
                            userData.forEach(function(data) { %>
                                <tr>
                                    <td><%= i %></td>
                                    <td><%= data.tname %></td>
                                    <td><%= data.temail %></td>
                                    <td><%= data.mobileno %></td>
                                    <td><%= data.city %></td>
                                    <td><%= data.website %></td>
                                    <td><%= data.nirf %></td>
                                    <td><%= data.nacc %></td>
                                    <td><%= data.ncte %></td>
                                    <td><%= data.aicte %></td>
                                    <td><%= data.ugc %></td>
                                </tr>
                        <%      i++; 
                            }); 
                        } else { %>
                            <tr>
                                <!-- ✅ colspan matches total columns (11) -->
                                <td colspan="11" class="text-center">
                                    No TPO Data Found (It may be that your college TPO is not added/linked)
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <br><br>
        <footer class="container-fluid text-center bg-light">
            <hr class="last">
            <p>
                Copyright 
                <i class="fa fa-copyright" aria-hidden="true"></i>
                &nbsp;<script>document.write(new Date().getFullYear())</script>
                &nbsp;By Placement Management System
            </p>
        </footer>
    </div>

    <!-- ✅ Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        });
    </script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" integrity="sha256-xNjb53/rY+WmG+4L6tTl9m6PpqknWZvRt0rO1SRnJzw=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
