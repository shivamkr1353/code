<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Upload Resume</title>

    <style>
      /* Google Font */
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap");

      /* Reset + Global */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }

      body {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: #f5f7fa; /* clean professional background */
        padding: 20px;
      }

      /* Upload Card */
      .upload-container {
        width: 100%;
        max-width: 430px;
        background: #fff;
        padding: 35px 40px;
        border-radius: 12px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        text-align: center;
      }

      .upload-container h2 {
        font-size: 1.7rem;
        font-weight: 600;
        margin-bottom: 25px;
        color: #222;
      }

      /* Form Elements */
      form label {
        display: block;
        text-align: left;
        margin-bottom: 10px;
        font-size: 1rem;
        font-weight: 500;
        color: #444;
      }

      input[type="file"] {
        width: 100%;
        padding: 13px;
        border: 2px dashed #d6d6d6;
        border-radius: 8px;
        background: #fafafa;
        cursor: pointer;
        font-size: 0.95rem;
        color: #555;
        transition: border-color 0.3s ease, background 0.3s ease;
      }

      input[type="file"]:hover {
        border-color: #0d6efd;
        background: #f0f6ff;
      }

      input[type="file"]::file-selector-button {
        padding: 10px 18px;
        background-color: #0d6efd;
        border: none;
        color: white;
        border-radius: 6px;
        margin-right: 12px;
        cursor: pointer;
        font-weight: 500;
        transition: background 0.3s ease;
      }

      input[type="file"]::file-selector-button:hover {
        background-color: #0b5ed7;
      }

      /* Submit Button */
      button[type="submit"] {
        width: 100%;
        height: 48px;
        background-color: #0d6efd;
        border: none;
        border-radius: 6px;
        margin-top: 22px;
        color: #fff;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s ease, box-shadow 0.3s ease;
      }

      button[type="submit"]:hover {
        background-color: #0b5ed7;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.25);
      }

      /* Error Message */
      .error-message {
        margin-top: 20px;
        background-color: #ffe5e5;
        border-left: 4px solid #e74c3c;
        padding: 12px 15px;
        border-radius: 6px;
        color: #c0392b;
        font-size: 0.95rem;
        text-align: left;
      }

      /* Back Link */
      .back-link {
        display: inline-block;
        margin-top: 25px;
        color: #0d6efd;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .back-link:hover {
        color: #084298;
        text-decoration: underline;
      }
    </style>
  </head>

  <body>
    <div class="upload-container">
      <h2>Upload Your Resume</h2>

      <form
        action="/student/upload"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="resume">Select Resume (PDF, DOC, DOCX):</label>
        <input
          type="file"
          name="resume"
          id="resume"
          accept=".pdf,.doc,.docx"
          required
        />

        <button type="submit">Upload</button>
      </form>

      <% if (typeof message !== "undefined" && message) { %>
      <p class="error-message"><%= message %></p>
      <% } %>

      <a href="/student/studenthome" class="back-link">‚Üê Back to Home</a>
    </div>
  </body>
</html>
